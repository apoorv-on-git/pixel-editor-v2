<script>
  google.charts.load('current', {'packages':['corechart']});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
   var data = google.visualization.arrayToDataTable([
        ["date", "Total", "Individual"],
        ["21/05/2020", 200, 20],
        ["22/05/2020", 190, 3],
        ["23/05/2020", 150, 32],
        ["24/05/2020", 248, 12],
        ["25/05/2020", 89, 1],
        ["26/05/2020", 67, 11],
        ["27/05/2020", 198, 0],
   ]);

   var options = {
     curveType: 'function',
     legend: { position: 'top', alignment: 'center', textStyle: {fontSize: 20} },
     colors: ["#a39ef5", "#5dca88"],
     lineWidth: 5
   };

   var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

   chart.draw(data, options);
  }
  $(function(){
    $('.upload-profile-image').change(function(){
      if (this.files && this.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
          $('.profile-image-display').attr('src', e.target.result)
        };
        reader.readAsDataURL(this.files[0]);
        var fd = new FormData();
        fd.append('profile_image', $('.upload-profile-image')[0].files[0])
        $.ajax({
          url: "{{url_for('contributor_api.update_profile_image')}}",
          type: 'post',
          contentType: false,
          processData: false,
          data: fd,
          beforeSend: function(){
            $('.main-container').addClass('blur');
            $(':button').prop('disabled', true);
            $("#loader").show();
          },
          success: function (result) {
            ;
          },
          error: function (result) {
            alert(result.responseJSON.message);
          },
          complete:function(data){
            $('.main-container').removeClass('blur');
            $(':button').prop('disabled', false);
            $("#loader").hide();
          }
        });
      }
    })
  })
  $(document).ready(function(){
    $("#dashboard_navigator").addClass("active")
  })
</script>
